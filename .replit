modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Cake Bot Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "discord_bot"

[[workflows.workflow]]
name = "Discord Cake Bot Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install discord.js dotenv && node index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "discord_bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm list discord.js || npm install discord.js && ls -la && cat index.js | head -n 20"

[deployment]
run = ["sh", "-c", "npm install discord.js dotenv && node index.js"]
